<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#f5faf6"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/circle_pink"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:src="@drawable/circle_pink" />

        <ImageView
            android:id="@+id/circle_blue"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/circle_blue" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ru.otus.animations.CircleView
            android:id="@+id/circle_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ru.otus.animations.CircleView
            android:id="@+id/circle_view2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ru.otus.animations.CircleView
            android:id="@+id/circle_view3"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ru.otus.animations.CircleView
            android:id="@+id/circle_view4"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ru.otus.animations.CircleView
            android:id="@+id/circle_view5"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

</LinearLayout>